<h2> Create a new product</h2>

<form method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" placeholder="Enter the name of the product" required>
  </div>

  <div>
    <label for="description">Description</label>
    <textarea name="description" id="description" placeholder="Enter the description of the product" required></textarea>
  </div>

  <div>
    <label for="price">Price</label>
    <input type="number" id="price" name="price" placeholder="Enter the price of the product" required>
  </div>

  <div>
    <label for="quantity">Stock</label>
    <input type="number" id="quantity" name="quantity" placeholder="Enter the stock of the product" required>
  </div>

  <div>
    <label for="image">Image</label>
    <input type="text" id="image" name="image" placeholder="Enter the image URL of the product" required>
  </div>

  <div>
    <label for="tags">Tags</label>
    <% tags.forEach(tag=>{ %>
    <label for=<%= tag %>><%= tag %></label>
    <input type="checkbox" name=<%= tag %> id=<%= tag %>>
    <% }) %>
  </div>

  <button type="submit">Create</button>
</form>