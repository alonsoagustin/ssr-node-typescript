<h2>UpdateProductPage</h2>

<div>
  <form method="POST">
    <div>
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= product.name %>">
    </div>

    <div>
      <label for="description">Description</label>
      <textarea id="description" name="description"><%= product.description %></textarea>
    </div>

    <div>
      <label for="price">Price</label>
      <input type="number" id="price" name="price" value="<%= product.price %>">
    </div>

    <div>
      <label for="quantity">Quantity</label>
      <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>">
    </div>

    <div>
      <label for="image">Image</label>
      <input type="text" id="image" name="image" value="<%= product.image %>">
    </div>

    <div>
      <label for="tags">Tags </label>
      <% tags.forEach(tag=> {%>
      <label for="<%= tag %>"><%= tag %></label>
      <input type="checkbox" id="<%= tag %>" name="tag" value="<%= tag %>" <%= product.tags.includes(tag) ? 'checked' : '' %>>
      <% }) %>
    </div>

    <button type="submit">Update</button>
    <a href="/products">Cancel</a>
  </form>
</div>